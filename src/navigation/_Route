import React from "react";
import { NavigationContext } from "./_navigationProvider";

export interface RouteProps {
  children: any;
  href: string;
}

const Route: React.SFC<RouteProps> = ({ children, href }) => {
  let navObj = React.useContext(NavigationContext);

  let copy = { ...navObj };
  switch (copy.pathname) {
    case href:
      return children;
    default:
      return null;
  }
};

export default Route;
